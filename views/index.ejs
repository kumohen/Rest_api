<!DOCTYPE html>
<html lang="en">
<head>
    <link href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" integrity="sha384-wvfXpqpZZVQGK6TAh5PVlGOfQNHSoD2xbE+QkPxCAFlNEevoEH3Sl0sibVcOQVnN" crossorigin="anonymous">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <title>Todo</title>
    <style>
        .btn-warning {
        height: 29px;
        width: 47px;
        text-align: center;
        }
        .btn-danger {
  
    height: 31px;
}
    </style>    
</head>
<body>
        <div class="container">
                <div class="row">
                    <div class="col-md-12">
                        <h2 class="bg-success my-3 auto text-white text-center">Rest Api/Todos</h2>
                    </div>
                </div>
                
                <form action="/" method="POST" class="form-inline">
                    <div class="form-group ">
                            <input type="text" class="form-control"  name="name"  placeholder="write something">
                    </div>
                   
                    <button type="submit" class="btn btn-primary ml-2">Add Todo</button>
                </form>  
                <hr/>
                <% posts.forEach(post => { %>  
                    <ul>
                        <div class="row my-2 ">
                                <li><%= post.content.substring(1,100) %></li>
                               <a class="btn btn-warning btn-xs ml-2" href="/<%=  post._id  %>"> <i class="fa fa-edit"></i></a>
                                <form style="display:inline" action="/post/<%= post._id%>" method="post">
                                    <button class="btn btn-danger btn-xs ml-2" type="submit">X</button>
                                  </form>
                        </div>
                       
                    </ul>    
                <%  })  %>
        </div>
        <div class="container " id="footer">
                <div class="row bg-success">
                    <div class="col-md-4">
                        <ul>
                            <li>NODE JS</li>
                            <li>EXPRESS JS</li>
                            <li>MONGODB</li>
                            <li>BOOTSTRAP</li>
                        </ul>
                    </div>
                   
                    <div class="col-md-1 mt-1">
                            <img src="https://i.postimg.cc/KvW860dg/20180619-111458.jpg" 
                            class="rounded-circle" alt="Cinque Terre" style="border-radius: 50%;" width="100" height="100"> 
                    </div>
                    <div class="col-md-2">
                        <h5 class="ml-3 mt-2 text-white">Mohen Mondal</h5>
                        <h5 class="ml-3 text-white">CS STUDENT</h5>    
                    </div>
                </div>
               
            </div>
    </body>
</html>